{% extends "::base.html.twig" %}

{%block title %}
FTM - irc
{%endblock%}

{% block topContainer %}
<div class="hero-unit">
	<h1>Salut Marhsmallow!</h1>
	<p>Bienvenue sur le site du serveur Feed the Marshmallow! Le serveur est accessible sur inscription.</p>
	<p><a href="{{ path('ftm_inscription') }}" class="btn btn-primary btn-large">S'inscrire &raquo;</a></p>
</div>
{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="row" id="personal">	
		<div class="col-md-12">
			<h2>Chat IRC</h2>
			<p>adresse du serveur irc: <a href="{{irc}}">{{irc}}</a></p>
			<div class="embed-responsive embed-responsive-4by3">
				<iframe src="http://webchat.esper.net/?{% if pseudo!=null %}nick={{ pseudo }}&{%endif%}channels=ftmarshmallow&prompt=1" class="embed-responsive-item"></iframe>
			</div>
		</div>
	</div>
</div>
{%endblock%}
