{% extends "::base.html.twig" %}

{%block title %}
Demande the Marshmallow
{%endblock%}

{% block topContainer %}

{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="row" id="personal">	
		<div class="col-md-12">

			<h2>Liste des inscriptions CDM</h2>

			<table class="table">
				<thead>
					<tr><th>Pseudo</th><th>Age</th><th>Motivation</th><th>Tete</th><th>moderation</th></tr>
				</thead>
				<tbody>
					{% for inscrit in listeCDM %}
					<tr {% if inscrit.mail_valid == 0 %} class="danger"{%endif%}>
						<td>{{inscrit.pseudo}}</td>
						<td>{{inscrit.age}}</td>
						<td>{{inscrit.motivation}}</td>
						<td><img src="https://minotar.net/avatar/{{inscrit.pseudo}}/24"></td>
						<td>{% if inscrit.mail_valid == 1 %}<a href="{{path('ftm_moderate_player',{uniqid: inscrit.uniqid, accept:1})}}">
							<span class="glyphicon glyphicon-plus"></span></a> {%else%} Mail non confirmé{%endif%}
							<a href="{{path('ftm_moderate_player',{uniqid: inscrit.uniqid, accept:0})}}">
							<span class="glyphicon glyphicon-minus"></span></a>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>

			<h2>Liste des inscriptions</h2>

			<table class="table">
				<thead>
					<tr><th>Pseudo</th><th>Age</th><th>Motivation</th><th>Tete</th><th>moderation</th></tr>
				</thead>
				<tbody>
					{% for inscrit in liste %}
					<tr {% if inscrit.mail_valid == 0 %} class="danger"{%endif%}>
						<td>{{inscrit.pseudo}}</td>
						<td>{{inscrit.age}}</td>
						<td>{{inscrit.motivation}}</td>
						<td><img src="https://minotar.net/avatar/{{inscrit.pseudo}}/24"></td>
						<td>{% if inscrit.mail_valid == 1 %}<a href="{{path('ftm_moderate_player',{uniqid: inscrit.uniqid, accept:1})}}">
							<span class="glyphicon glyphicon-plus"></span></a> {%else%} Mail non confirmé{%endif%}
							<a href="{{path('ftm_moderate_player',{uniqid: inscrit.uniqid, accept:0})}}">
							<span class="glyphicon glyphicon-minus"></span></a>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
			<h2>Liste des refusés <span class="badge badge-warning">{{nbRefus}}</span></h2>

			<table class="table">
				<thead>
					<tr><th>Pseudo</th><th>Age</th><th>Motivation</th><th>Tete</th><th>Accepter</th></tr>
				</thead>
				<tbody>
					{% for refuse in refus %}
					{% if refuse.pseudo != ''%}
					<tr>
						<td>{{refuse.pseudo}}</td>
						<td>{{refuse.age}}</td>
						<td>{{refuse.motivation}}</td>
						<td><img src="https://minotar.net/avatar/{{refuse.pseudo}}/24"></td>
						<td><a href="{{path('ftm_moderate_player',{uniqid: refuse.uniqid, accept:1})}}"><span class="glyphicon glyphicon-plus"></span></a></td></tr>
					{%endif%}
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{%endblock%}