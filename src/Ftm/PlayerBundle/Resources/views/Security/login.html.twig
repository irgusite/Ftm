{% extends "::base.html.twig" %}

{%block title %}Login{%endblock%}

{% block body %}
<div class="col-md-12">
<h2>Login</h2>
{%if error %}
	<div class="alert alert-error">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<strong>Ooops!</strong> Soit t'es pas réveillé, soit t'as pas le droit!
	</div>
{% endif %}
  <form action="{{ path('login_check') }}" method="post" role="form">
	<div class="form-group">
		<label for="username">Login :</label>
		<input type="text" class="form-control" placeholder="Pseudo Minecraft" id="username" name="_username" value="{{ last_username }}" />
	</div>
	<div class="form-group">
		<label for="password">Mot de passe :</label>
		<input class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" />
	</div>
	<div class="form-group">
		<input type="checkbox" id="remember_me" name="_remember_me" checked />
    	<label for="remember_me">Se souvenir de moi?</label>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Connexion</button>
  </form>
</div>
{%endblock%}
