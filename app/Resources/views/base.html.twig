<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	 <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Feed the Marshmallow{% endblock %}</title>
	
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />
	  <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
      <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}" type="text/css" />
    {% endblock %}
  </head>
  
  
    <body>
		 <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="{{ path('ftm_home') }}">FTM</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="{{ path('ftm_home') }}">Home</a></li>
              <li><a href="{{ path('ftm_inscription') }}">Inscription</a></li>
              <li><a href="{{ path('ftm_contact')}}">Contact</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Serveur <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('ftm_server') }}">Minecraft</a></li>
                  <li><a href="{{ path('ftm_irc') }}">IRC</a></li>
                  <li><a href="{{ path('ftm_mumble') }}">Mumble</a></li>
				  <li><a href="{{ path('ftm_dynmap') }}">Dynmap</a></li>
				  <li><a href="{{path('ftm_player_whitelist')}}">La whitelist {% if is_granted('ROLE_ADMIN') %}{{render(controller('FtmPlayerBundle:Player:getWlNb'))}}{%endif%}</a></li>
                  <li class="divider"></li>
                  <li class="nav-header">Modpack</li>
                  <li><a href="#">Les mods</a></li>
				  <li><a href="{{path('ftm_stargate')}}">Les adresse stargate</a></li>
                </ul>
              </li>
			  {% if is_granted('ROLE_PLAYER') %}
			  <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Membres <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{path('ftm_download')}}">T&eacute;l&eacute;chargements</a></li>
				  
                  <li class="divider"></li>
                  <li class="nav-header">Utilisateur - <img src="https://minotar.net/avatar/{{app.user.username}}/16"></li>
                  <li><a href="{{path('ftm_player_info')}}">Mes infos</a></li>
				  <li><a href="{{path('logout')}}">Logout</a></li>
                </ul>
              </li>
			  {%endif%}
			  {% if is_granted('ROLE_ADMIN') %}
			  <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admins <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{path('ftm_admin_list_demands')}}">Demandes {{render(controller('FtmPlayerBundle:Moderation:getInscriptionNB'))}}</a></li>
				  <li><a href="{{path('ftm_admin_upload_wl')}}">Uploader la whitelist</a></li>
                  <li><a href="{{path('ftm_admin_mail')}}">Mail</a></li>
                  <li class="divider"></li>
                  <li class="nav-header">A definir - <img src="https://minotar.net/avatar/{{app.user.username}}/16"></li>
                  <li><a href="#">Mes infos</a></li>
				  <li><a href="{{path('logout')}}">Logout</a></li>
                </ul>
              </li>
			  {%endif%}
			  {% if is_granted('ROLE_PLAYER') %}
			<li class="pull-right"><img src="https://minotar.net/avatar/{{app.user.username}}/40">{#https://minotar.net/#}</li>
			{%endif%}
            </ul>
            <form class="navbar-form pull-right" action="{{ path('login_check') }}" method="post">
              <input class="span2" type="text" id="username" name="_username" placeholder="Pseudo">
              <input class="span2" type="password" id="password" name="_password" placeholder="Password">				
              <button type="submit" class="btn">Sign in</button>
            </form>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
	<header id="overview" class="jumbotron subhead">

    <div class="container"></div>

</header>
	<div class="container">
		{% for flashMessage in app.session.flashbag.get('success') %}
			<div class="alert alert-success">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
				{{ flashMessage }}
			</div>
		{% endfor %}
		{% for flashMessage in app.session.flashbag.get('error') %}
			<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
				{{ flashMessage }}
			</div>
		{% endfor %}
	
	{% if is_granted('ROLE_PLAYER') %}
	{%else%}
		{% block topContainer %}
		{% endblock %}
	{%endif%}
		<div class="row">	
			<div id="content" class="span9">
				{% block body %}
				{% endblock %}
			</div>
		</div>
		<hr>
		<footer>
			<p>ftmarshmallow.com Â© 2014.</p>
		</footer>
    </div>
  {% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
  {% endblock %}
  </body>
</html>
